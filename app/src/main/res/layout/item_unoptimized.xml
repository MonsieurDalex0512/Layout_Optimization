<?xml version="1.0" encoding="utf-8"?>
<!-- 
    UNOPTIMIZED LAYOUT - DEMONSTRATION OF BAD PRACTICES
    Issues:
    1. Deep nesting (7 levels)
    2. Multiple backgrounds (high overdraw)
    3. LinearLayout with weights (double measure)
    4. Unnecessary ViewGroups
    5. Non-optimal view hierarchy
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="8dp">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:background="#FFFFFF">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FAFAFA"
            android:padding="12dp">
            
            <!-- Header section - Nested horizontal LinearLayout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF3E0"
                android:padding="8dp">
                
                <!-- Icon container - UNNECESSARY nesting -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFCCBC"
                    android:padding="4dp">
                    
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#FF9E80">
                        
                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:background="#FF6E40"/>
                    </LinearLayout>
                </FrameLayout>
                
                <!-- Text container - UNNECESSARY nesting -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#FFE0B2"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FFCC80">
                        
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Item #0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:background="#FFB74D"
                            android:padding="4dp"/>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FFA726"
                        android:paddingTop="4dp">
                        
                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đây là một đoạn mô tả rất dài, nhiều dòng, buộc hệ thống phải đo text nhiều lần khi layout lại, đặc biệt là trong RecyclerView khi scroll nhanh. Overdraw và nested layout gây lag nghiêm trọng."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:background="#FF9800"
                            android:padding="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            <!-- Footer section - Another nested layer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E3F2FD"
                android:paddingTop="8dp"
                android:gravity="end">
                
                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Just now"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:background="#BBDEFB"
                    android:padding="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
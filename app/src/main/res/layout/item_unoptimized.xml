<?xml version="1.0" encoding="utf-8"?>
<!-- Layout lồng nhau CỰC NHIỀU + OVERDRAW (Vẽ chồng màu nền) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF"> <!-- Nền trắng gốc -->

    <!-- Thêm SlowView để ép render chậm -->
    <com.example.layout_optimization.views.SlowView
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <!-- LEVEL 1: Wrapper thừa + NỀN THỪA (Gây Overdraw) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        
        <!-- LEVEL 2: Wrapper thừa + NỀN THỪA -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            
            <!-- LEVEL 3: Wrapper thừa + NỀN THỪA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">
                
                <!-- LEVEL 4: Wrapper thừa + NỀN THỪA -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF">
                    
                    <!-- LEVEL 5: Wrapper thừa + NỀN THỪA -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFFFFF">
                        
                        <!-- NỘI DUNG CHÍNH -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:background="#FFFFFF"> <!-- Nền trắng bên trong cùng -->

                            <ImageView
                                android:id="@+id/icon"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_weight="2"
                                android:src="@android:drawable/ic_menu_gallery"
                                android:scaleType="centerCrop"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">
                                
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    
                                    <TextView
                                        android:id="@+id/title"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Tiêu đề bài viết"
                                        android:textStyle="bold"
                                        android:textSize="16sp"/>
                                        
                                    <TextView
                                        android:id="@+id/timestamp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2 phút trước"
                                        android:textSize="12sp"
                                        android:textColor="#666"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mô tả ngắn gọn về nội dung bài viết..."
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:layout_marginTop="4dp"/>
                                    
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="8dp">
                                    
                                    <Button
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:text="Like"
                                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                                        
                                    <Button
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:text="Share"
                                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE"
        android:layout_marginTop="8dp"/>
        
</LinearLayout>
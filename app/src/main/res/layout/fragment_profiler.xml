<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <!-- Systrace Controls Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:background="#FFFFFF">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Method Tracing"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ghi lại dữ liệu hiệu năng ở cấp độ method"
                    android:layout_marginTop="4dp"/>
                
                <TextView
                    android:id="@+id/text_trace_status" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa ghi"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    
                    <Button
                        android:id="@+id/btn_start_trace" 
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Bắt đầu Trace"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"/>
                    
                    <Button
                        android:id="@+id/btn_stop_trace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dừng Trace"
                        android:layout_weight="1"
                        android:enabled="false"/>
                </LinearLayout>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File trace được lưu tại: /sdcard/Android/data/.../files/"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- Layout Analyzer Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:background="#FFFFFF">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Layout Analyzer"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn layout để phân tích:"
                    android:layout_marginTop="12dp"/>
                
                <Spinner
                    android:id="@+id/spinner_layout_type" 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
                
                <Button
                    android:id="@+id/btn_analyze_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phân tích Layout"
                    android:layout_marginTop="8dp"/>
                
                <!-- Quick Metrics -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overdraw"
                            android:textSize="12sp"
                            android:textColor="#666666"/>
                        
                        <TextView
                            android:id="@+id/text_overdraw_estimate" 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--x"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số lần Measure"
                            android:textSize="12sp"
                            android:textColor="#666666"/>
                        
                        <TextView
                            android:id="@+id/text_measure_passes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- Analysis Results Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:background="#FFFFFF">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kết quả Phân tích"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                
                <ScrollView 
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="12dp">
                    
                    <TextView
                        android:id="@+id/text_hierarchy_analysis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nhấn 'Phân tích Layout' để xem kết quả..."
                        android:fontFamily="monospace"
                        android:textSize="12sp"/>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- Tips Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:backgroundTint="#FFF3E0">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mẹo Profiling"
                    android:textStyle="bold"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Sử dụng Systrace để phân tích frame chi tiết"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Bật 'Profile GPU Rendering' trong Developer Options"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Bật 'Debug GPU Overdraw' để hiển thị overdraw"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Sử dụng Layout Inspector trong Android Studio để phân tích trực quan"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
    </LinearLayout>
</ScrollView>